.main
  header
    position absolute
    top 0
    left 0
    right 0
    display flex
    flex-direction: row
    justify-content: flex-end
    user-select: none

    a
      border-bottom 3px solid black

    nav ol
      font-size 24px
      font-weight: bold
      text-transform: lowercase
      list-style: none
      display flex
      flex-direction: row
      align-items: center
      padding-right 18px

      li a
        display inline-block
        margin 18px 18px
        padding-bottom 3px
        cursor pointer
        transition 200ms ease-out

      li a:hover
        padding-bottom 1px


  .intro
    font-weight: bold
    font-size 2.8vw
    padding-left 25%
    padding-top 8%
    white-space: nowrap
    display flex
    flex-direction: column

    h1
      font-size 7vw
      position relative
      left -5px


  .work
    padding-top 3em

    ol
      padding-left 25%
      padding-right 25%
      list-style: none
      display flex
      flex-direction: row
      align-items: center
      gap 3em
      overflow scroll
      scrollbar-width none
      -ms-overflow-style: none

      &::-webkit-scrollbar
        width 0
        height 0
